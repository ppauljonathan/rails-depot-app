<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<h1><%= t('.title_html') %></h1>

<ul class="catalog">
  <%= request.env['HTTP_USER_AGENT'] %>
  <% cache @products do %>
    <% @products.each do |product| %>
      <% cache product do %>
        <li>
          <% if product.images_attachments.count.zero? %>
            <%= image_tag(product.image_url, class: 'list_image') %>
          <% else %>
            <%= image_tag(url_for(product.images_attachments[0]), class: 'list_image') %>
          <% end %>
          
          <h2><%= product.title %></h2>
          <p>
            <%= sanitize(product.description) %>
          </p>
          <div class="price">
            <%= number_to_currency product.price %>
            <%= button_to t('.add_html'), line_items_path(product_id: product, locale: I18n.locale), data: { remote: true } %>
          </div>
        </li>
      <% end %>
    <% end %>
  <% end %>
</ul>