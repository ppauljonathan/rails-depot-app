<div class="depot_form">

<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h2><%= t('.legend') %></h2>
  <div>
    <%= form.label :name, t('.name') %>
    <%= form.text_field :name, size: 40 %>
  </div>

  <div>
    <%= form.label :email, t('.email') %>
    <%= form.text_field :email, size: 40 %>
  </div>

  <div>
    <%= form.label :password, t('.password') %>
    <%= form.password_field :password, size: 40 %>
  </div>

  <div>
    <%= form.label :password_confirmation, t('.confirm') %>
    <%= form.password_field :password_confirmation,
    id: :user_passwor_confirmation,
    size: 40 %>
  </div>

  <div>
    <%= t('.address') %>
    <%= form.fields_for :address do |address_form| %>
      <div>
        <%= address_form.label :state, t('.state') %>
        <%= address_form.text_field :state %>
      </div>
      <div>
        <%= address_form.label :country, t('.country') %>
        <%= address_form.text_field :country %>
      </div>
      <div>
        <%= address_form.label :pincode, t('.pincode') %>
        <%= address_form.text_field :pincode %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

</div>
